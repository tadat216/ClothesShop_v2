@model ClothesShop.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Sửa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Account/Create" class="nav-link">Sửa Tài khoản</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active"><a href="~/Admin/Account/Index">Danh sách tin tức</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true);
           
            <div class="form-group">
                <label>Tên tài khoản</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
            </div>
            @*<div class="form-group">
                <label>Họ và tên</label>
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
            </div>*@
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Phone</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Quyền</label>
                @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "-Chọn quyền-")
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Nhập lại mật khẩu</label>
                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <a class="btn btn-danger" href="~/Admin/Account">Trở lại</a>
                <button type="submit" class="btn btn-success"> Sửa</button>
            </div>
        }
    </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
