@model ClothesShop.Models.EF.Parameter

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Parameters" class="nav-link">Tham số</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Parameters/Edit" class="nav-link">Chỉnh sửa</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật tham số</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin tham số</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Parameters", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary(true);
                    @Html.HiddenFor(x => x.Id)
                    <!-- your steps content here -->
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    @*@Html.TextAreaFor(x => x.Alias, new { @class = "form-control", @hidden = "hidden", @value = Model.Alias })*@
                    <div class="form-group">
                        <label for="Name">Tên tham số</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tên tham số", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Value">Mô tả</label>
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "Mô tả" })
                        @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Value">Giá trị</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control", @placeholder = "Giá trị" })
                        @Html.ValidationMessageFor(x => x.Value, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Value">Đơn vị tính</label>
                        @Html.TextBoxFor(x => x.Unit, new { @class = "form-control", @placeholder = "Giá trị" })
                        @Html.ValidationMessageFor(x => x.Unit, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Apply, "Áp dụng")
                        @Html.CheckBoxFor(x => x.Apply)
                    </div>
                    <div class="form-group">
                        <a class="btn btn-danger" href="~/Admin/Parameters">Trở lại</a>
                        <button type="submit" class="btn btn-success">Lưu</button>
                    </div>

                </div>
                }
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

</section>
<!-- /.content -->
