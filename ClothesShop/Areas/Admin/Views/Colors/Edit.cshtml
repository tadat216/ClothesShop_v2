@model ClothesShop.Models.EF.Color

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Colors" class="nav-link">Màu sắc</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Colors/Create" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật màu sắc</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin màu sắc</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Colors", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary(true);
                    @Html.HiddenFor(x=>x.Id)
                    <!-- your steps content here -->
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    @*@Html.TextAreaFor(x => x.Alias, new { @class = "form-control", @hidden = "hidden", @value = Model.Alias })*@
                    <div class="form-group">
                        <label for="ColorsTitle">Tên màu</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="ColorsDescription">Mã màu</label>
                        @Html.TextAreaFor(x => x.Code, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <a class="btn btn-danger" href="~/Admin/Colors">Trở lại</a>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>

                </div>
                }
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

</section>
<!-- /.content -->