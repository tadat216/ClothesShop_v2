<!DOCTYPE html>
<html>
<head>
    <title>ClotheShop</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/assets/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/responsive.css">
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/PagedList1.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/ckfinder/ckfinder.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
</head>
<body>
    <div class="super_container">
        <header class="header trans_300">
            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="top_nav_left">Miễn phí ship khu vực nội thành Nha Trang</div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">
                                    <li class="account">
                                        @if (!Request.IsAuthenticated)
                                        {
                                            <a href="#">
                                                Đăng nhập/Đăng kí
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                <li><a href="/Account/Login"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng nhập</a></li>
                                                <li><a href="/Account/Register"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng kí</a></li>
                                            </ul>
                                        }
                                        else
                                        {
                                            <a href="#">
                                                Xin chào, @User.Identity.Name
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                @if (this.User.IsInRole("Admin") || this.User.IsInRole("Employee"))
                                                {
                                                    <li><a href="/Admin/Home"><i class="fa fa-vcard" aria-hidden="true"></i>Trang admin</a></li>
                                                }
                                                <li><a href="/Account/Profile"><i class="fa fa-user" aria-hidden="true"></i>Hồ sơ</a></li>
                                                <li><a href="/Account/ShoppingHistory"><i class="fa fa-money" aria-hidden="true"></i>Lịch sử mua hàng</a></li>
                                                <li><a href="javascript:document.getElementById('logOffForm').submit()"><i class="fa fa-sign-out" aria-hidden="true"></i>Đăng xuất</a></li>
                                            </ul>
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->

            <div class="main_nav_container pt-3">
                <div class="container">
                    <div class="row">
                        <div class="col-12 d-flex align-items-center">
                            <div class="col-md-3">
                                <a href="/trang-chu" style="font-size: 40px; font-weight: bolder">ClotheShop</a>
                            </div>
                            <div class="col-md-9 mx-sm-3">
                                @using (Html.BeginForm("index", "Home", FormMethod.Get, new { enctype = "multipart/form-data", @class = "form-inline d-flex col-9" }))
                                {
                                    <div class="form-group mb-2" style="width:300px">
                                        <input type="text" class="form-control " id="staticEmail2" placeholder="Tìm kiếm sản phẩm, bài viết" style="width: 100%">
                                    </div>
                                    <div class="form-group mb-2 ml-2">
                                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div style="height:160px;"></div>


        <div class="ml-4">
            @RenderBody()
        </div>

        <!-- Benefit -->

        <div class="benefit">
            <div class="container">
                <div class="row benefit_row">
                    <div class="col-lg-3 benefit_col">
                        <div class="benefit_item d-flex flex-row align-items-center">
                            <div class="benefit_icon"><i class="fa fa-truck" aria-hidden="true"></i></div>
                            <div class="benefit_content">
                                <h6>Miễn phí ship</h6>
                                <p>Miễn phí ship trong khu vực nội thành Nha Trang</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 benefit_col">
                        <div class="benefit_item d-flex flex-row align-items-center">
                            <div class="benefit_icon"><i class="fa fa-money" aria-hidden="true"></i></div>
                            <div class="benefit_content">
                                <h6>Thanh toán linh hoạt</h6>
                                <p>Có thể ship COD hoặc chuyển khoản</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 benefit_col">
                        <div class="benefit_item d-flex flex-row align-items-center">
                            <div class="benefit_icon"><i class="fa fa-undo" aria-hidden="true"></i></div>
                            <div class="benefit_content">
                                <h6>7 ngày đổi trả</h6>
                                <p>Đổi trả sản phẩm mới nếu như sản phẩm không đúng với chất lượng</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 benefit_col">
                        <div class="benefit_item d-flex flex-row align-items-center">
                            <div class="benefit_icon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
                            <div class="benefit_content">
                                <h6>Mở cửa cả tuần</h6>
                                <p>8AM - 09PM</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- News -->
        @*@Html.Action("PartialNews", "News")*@

        <!-- News -->
        @*@Html.Action("Partial_Subscribe", "Home")*@

        <!-- Footer -->

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
                            <ul class="footer_nav">
                                <li><a href="#">Blog</a></li>
                                <li><a href="#">FAQs</a></li>
                                <li><a href="/lien-he">Contact us</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-skype" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row section_gap">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="footer_nav_container">
                                <div class="cr">©2023 All Rights Reserverd. Made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="#">Huỳnh Thị Ngọc Tuyết </a> &amp; distributed by <a href="https://themewagon.com">ThemeWagon</a></div>
                            </div>
                        </div>
                    </div>


                </div>
        </footer>

        @if (Request.IsAuthenticated)
        {
            <div style="display:none;">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @id = "logOffForm" }))
                {
                    @Html.AntiForgeryToken();
                }
            </div>
        }

        @*@Scripts.Render("~/bundles/jquery")*@
        <script src="~/Content/assets/styles/bootstrap4/popper.js"></script>
        <script src="~/Content/assets/styles/bootstrap4/bootstrap.min.js"></script>
        <script src="~/Content/assets/plugins/Isotope/isotope.pkgd.min.js"></script>
        <script src="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
        <script src="~/Content/assets/plugins/easing/easing.js"></script>
        <script src="~/Content/assets/js/custom.js"></script>
        <script src="~/Scripts/jsShoping.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
        @*@Scripts.Render("~/bundles/bootstrap")*@
        @RenderSection("scripts", required: false)
</body>
</html>





