@model IEnumerable<ClothesShop.Models.EF.ProductCategory>
@{
    ViewBag.Title = "Thùng rác";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}





<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            @*<h3 class="card-title">Title</h3>*@
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">THÙNG RÁC LOẠI SẢN PHẨM</strong>
                </div>

                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Index", "ProductCategories")" class="btn-sm btn-primary"><i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>

                </div>
            </div>

        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped" , id="myTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.IdParent)</th>

                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.ProductCategoryParent.Title)</td>
                            <td>
                                <a href="@Url.Action("Undo","ProductCategories", new { id = item.Id })" class="btn-sm btn-success"><i class="fa fa-undo"></i></a>
                                @*<a href="@Url.Action("Delete","ProductCategories", new { id = item.Id })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>*@

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div> <!-- /.card-footer-->
    </div><!-- /.card -->
</section><!-- /.content -->
